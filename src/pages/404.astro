---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404" description="404 Not Found">
  <div
    class="flex flex-col items-center justify-center gap-y-3 overflow-hidden"
    style="height: calc(100vh - 4rem)"
  >
    <span class="i-tabler-error-404 text-8xl text-green-500 opacity-80"></span>
    <p class="text-md text-gray-400">暂时没有，可能也不会有</p>
    <a
      href="/"
      class="inline-flex items-center gap-2 px-4 py-3 bg-green-100 hover:bg-green-200 text-green-700 font-medium rounded-lg transition-colors duration-200"
    >
      <span class="i-tabler-arrow-left"></span>
      <span>返回首页</span>
    </a>
  </div>
</Layout>
