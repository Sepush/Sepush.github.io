---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
import { authorSocialLinks } from "../config/social";
---

<Layout title="Home - Artea">
  <div class="max-w-3xl mx-auto px-6 py-20">
    <div class="text-center mb-12">
      <img
        src="/avatar.svg"
        alt="Artea Avatar"
        class="w-32 h-32 rounded-full mx-auto mb-8 ring-4 ring-primary-200 shadow-lg"
      />
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Hi, I'm Artea
      </h1>
    </div>

    <div class="prose prose-lg max-w-none text-center mb-16">

    </div>

    <div class="text-center">
      <SocialLinks 
        links={authorSocialLinks}
        size="md"
        variant="horizontal"
      />
    </div>
  </div>
</Layout>
