---
import Empty from '../components/Empty.astro';
import FriendBubble from '../components/FriendBubble.astro';
import { friends } from '../config/social';
import Layout from '../layouts/Layout.astro';
---

<Layout title="朋友 - Artea" description="朋友列表">
  <div class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">友人</h1>
      <p class="text-gray-500">这里记录着我的朋友们，排名不分先后</p>
    </div>

    {
      friends.length > 0 ? (
        <div class="space-y-3">
          {friends.map((friend) => <FriendBubble friend={friend} />)}
        </div>
      ) : <Empty />
    }
  </div>
</Layout>
