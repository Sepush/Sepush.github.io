---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import LivingTree from "../components/LivingTree.astro";
import "../styles/global.css";
import "../styles/markdown.css";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Artea's blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/avatar.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      id="google-fonts"
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&family=LXGW+WenKai+Mono+TC:wght@300;400;700&display=swap"
      rel="stylesheet"
      media="print"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&family=LXGW+WenKai+Mono+TC:wght@300;400;700&display=swap"
        rel="stylesheet"
      />
    </noscript>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css"
      integrity="sha384-nB0miv6/jRmo5UMMR1wu3Gz6NLsoTkbqJghGIsx//Rlm+ZU03BU6SQNC66uf4l5+"
      crossorigin="anonymous"
    />
    <script>
    const link = document.getElementById("google-fonts");
      if (link instanceof HTMLLinkElement) {
        const enable = () => {
          link.media = "all";
        };

        // If the stylesheet is already loaded (e.g. bfcache), enable immediately.
        if (link.sheet) {
          enable();
        } else {
          link.addEventListener("load", enable, { once: true });
        }
      }
    </script>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-gradient-primary text-gray-900 font-sans antialiased">
    <LivingTree />
    <div class="flex flex-col min-h-screen relative z-10">
      <Header />
      <main class="flex-1 relative">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
html {
  font-family: var(--a-font-system);
  scroll-behavior: smooth;
}

@supports (scrollbar-gutter: stable) {
  html {
    scrollbar-gutter: stable;
  }
}

code {
  font-family: var(--a-font-mono);
}

::selection {
  background-color: oklch(0.67 0.15 145 / 0.2);
  color: var(--a-color-accent-strong);
}

a {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

input:focus,
textarea:focus {
  outline: 2px solid oklch(0.67 0.15 145 / 0.5);
  outline-offset: 2px;
}
</style>
