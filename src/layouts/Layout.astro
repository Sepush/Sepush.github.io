---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Artea's personal website" } = Astro.props;

import Header from '../components/Header.astro';
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/avatar.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/src/styles/markdown.css">
  </head>
  <body class="min-h-screen bg-gradient-primary text-gray-900 font-sans antialiased">
    <div class="flex flex-col min-h-screen relative">
      <div class="fixed inset-0 -z-10 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-primary-200/30 to-accent-200/30 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-tr from-accent-200/30 to-primary-200/30 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-br from-primary-100/20 to-accent-100/20 rounded-full blur-3xl"></div>
      </div>
      
      <Header />
      <main class="flex-1 relative">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
  code {
    font-family: 'JetBrains Mono', Consolas, Monaco, monospace;
  }
  
  ::selection {
    background-color: oklch(0.67 0.15 145 / 0.2);
    color: oklch(0.39 0.27 145);
  }

  a {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  input:focus,
  textarea:focus {
    outline: 2px solid oklch(0.67 0.15 145 / 0.5);
    outline-offset: 2px;
  }
</style>
