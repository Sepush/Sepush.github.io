---
export interface Props {
  title?: string;
  message?: string;
  icon?: string;
  showNavLinks?: boolean;
}

const {
  title = "空空如也",
  message = "这里还没有任何内容",
  icon = "i-tabler-inbox",
} = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-y-6 py-16">
  <span class={`${icon} text-8xl text-gray-500 opacity-80`}></span>

  <h3 class="text-2xl font-medium text-gray-700 tracking-tight">
    {title}
  </h3>

  <p class="text-md text-gray-400">
    {message}
  </p>

  <a
    href="/"
    class="inline-flex items-center gap-2 px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors duration-200"
  >
    <span class="i-tabler-arrow-left"></span>
    <span>返回首页</span>
  </a>
</div>
