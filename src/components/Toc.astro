---
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
  maxDepth?: number;
  className?: string;
}

const {
  headings,
  maxDepth = 3,
  className = '',
} = Astro.props;

const tocItems = headings.filter((h) => h.depth <= maxDepth);
---

{
  tocItems.length > 0 && (
    <aside class={`toc-sidebar ${className}`} id="toc-sidebar">
      <div class="toc-overlay" />

      <div class="toc-wrapper">
        <nav class="toc-content">
          {
            tocItems.map((heading) => (
              <a
                href={`#${heading.slug}`}
                class={`toc-item toc-depth-${heading.depth}`}
                data-depth={heading.depth}
                title={heading.text}
              >
                <span class="toc-indicator" />
                <span class="toc-text">{heading.text}</span>
              </a>
            ))
          }
        </nav>
      </div>
    </aside>
  )
}

<style>
.toc-sidebar {
  position: fixed;
  right: 0;
  top: 0;
  bottom: 0;
  height: 100vh;
  width: 44px;
  z-index: 100;
  display: none;
  transition: width 0.25s ease;
}

@media (min-width: 1280px) {
  .toc-sidebar {
    display: flex;
    align-items: center;
  }
}

.toc-sidebar:hover {
  width: 280px;
}

.toc-wrapper {
  position: relative;
  z-index: 10;
  width: 100%;
  max-height: 70vh;
  padding: 20px 16px 20px 12px;
  overflow: hidden;
  background: transparent;
}

.toc-content {
  max-height: 70vh;
  overflow-y: auto;
  overflow-x: hidden;
  padding-right: 16px;
}

.toc-content::-webkit-scrollbar {
  width: 3px;
}

.toc-content::-webkit-scrollbar-track {
  background: transparent;
}

.toc-content::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 2px;
}

.toc-content::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

.toc-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 5px 0;
  color: rgba(255, 255, 255, 0.6);
  font-size: 13px;
  line-height: 1.4;
  text-decoration: none;
  white-space: nowrap;
  transition: color 0.2s ease;
  position: relative;
}

.toc-item:hover {
  color: rgba(255, 255, 255, 0.95);
}

.toc-indicator {
  flex-shrink: 0;
  width: 24px;
  height: 2px;
  background: rgba(255, 255, 255, 0.25);
  transition: all 0.2s ease;
}

.toc-depth-1 .toc-indicator {
  width: 24px;
}

.toc-depth-2 .toc-indicator {
  width: 16px;
  margin-left: 8px;
}

.toc-depth-3 .toc-indicator {
  width: 10px;
  margin-left: 14px;
}

.toc-text {
  opacity: 0;
  transform: translateX(-8px);
  transition: all 0.2s ease;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 200px;
}

.toc-sidebar:hover .toc-text {
  opacity: 1;
  transform: translateX(0);
}

.toc-item.active {
  color: var(--a-color-accent-light);
}

.toc-item.active .toc-indicator {
  background: var(--a-color-accent-light);
  height: 2px;
}

.toc-item:hover .toc-indicator {
  background: rgba(255, 255, 255, 0.7);
  width: 28px;
}

.toc-item.toc-depth-2:hover .toc-indicator {
  width: 20px;
}

.toc-item.toc-depth-3:hover .toc-indicator {
  width: 14px;
}

.toc-item.active:hover .toc-indicator {
  background: var(--a-color-accent-light);
}

.toc-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.25s ease, visibility 0.25s ease;
  z-index: 1;
  pointer-events: none;
}

.toc-sidebar:hover .toc-overlay {
  opacity: 1;
  visibility: visible;
}

@media (prefers-color-scheme: light) {
  .toc-overlay {
    background: rgba(255, 255, 255, 0.85);
  }

  .toc-item {
    color: rgba(0, 0, 0, 0.55);
  }

  .toc-item:hover {
    color: rgba(0, 0, 0, 0.9);
  }

  .toc-indicator {
    background: rgba(0, 0, 0, 0.2);
  }

  .toc-item:hover .toc-indicator {
    background: rgba(0, 0, 0, 0.5);
  }

  .toc-content::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.15);
  }

  .toc-content::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.25);
  }
}
</style>

<script>
function initToc() {
  const tocSidebar = document.getElementById('toc-sidebar');
  const tocLinkElements = Array.from(document.querySelectorAll('.toc-item'))
    .filter((el): el is HTMLAnchorElement => el instanceof HTMLAnchorElement);

  if (!tocSidebar || tocLinkElements.length === 0) return;

  const prefersReducedMotion = window.matchMedia?.(
    '(prefers-reduced-motion: reduce)',
  )?.matches ?? false;

  const onTocClick = (e: MouseEvent) => {
    const currentTarget = e.currentTarget;
    if (!(currentTarget instanceof HTMLAnchorElement)) return;

    const href = currentTarget.getAttribute('href') ?? '';
    if (!href.startsWith('#')) return;

    let targetId = href.slice(1);
    try {
      targetId = decodeURIComponent(targetId);
    } catch {
      // keep raw
    }

    const target = document.getElementById(targetId);
    if (!(target instanceof HTMLElement)) return;

    e.preventDefault();
    history.pushState(null, '', href);
    setActive(targetId);
    target.scrollIntoView({
      behavior: prefersReducedMotion ? 'auto' : 'smooth',
      block: 'start',
    });
  };

  const linkByTargetId = new Map<string, HTMLAnchorElement>();
  const headingTargets: HTMLElement[] = [];

  for (const tocLinkElement of tocLinkElements) {
    const href = tocLinkElement.getAttribute('href') ?? '';
    if (!href.startsWith('#')) continue;

    let targetId = href.slice(1);
    try {
      targetId = decodeURIComponent(targetId);
    } catch {
      // keep raw
    }
    linkByTargetId.set(targetId, tocLinkElement);

    const headingTarget = document.getElementById(targetId);
    if (headingTarget instanceof HTMLElement) {
      headingTargets.push(headingTarget);
    }
  }

  if (headingTargets.length === 0) return;

  let activeLink: HTMLAnchorElement | null = null;
  function setActive(targetId: string | null) {
    const nextLink = targetId ? linkByTargetId.get(targetId) ?? null : null;
    if (activeLink === nextLink) return;

    activeLink?.classList.remove('active');
    nextLink?.classList.add('active');
    activeLink = nextLink;
  }

  const onHashChange = () => {
    const targetId = window.location.hash
      ? decodeURIComponent(window.location.hash.slice(1))
      : null;
    setActive(targetId);
  };

  const observer = new IntersectionObserver(
    (entries) => {
      const visibleEntries = entries
        .filter((entry) => entry.isIntersecting)
        .sort((a, b) => a.boundingClientRect.top - b.boundingClientRect.top);

      const topMost = visibleEntries[0];
      if (topMost?.target instanceof HTMLElement) {
        setActive(topMost.target.id);
      }
    },
    {
      rootMargin: '-80px 0px -70%',
      threshold: 0.1,
    },
  );

  for (const headingTarget of headingTargets) observer.observe(headingTarget);
  window.addEventListener('hashchange', onHashChange, { passive: true });
  window.addEventListener('popstate', onHashChange, { passive: true });
  for (const tocLinkElement of tocLinkElements) {
    tocLinkElement.addEventListener('click', onTocClick);
  }

  onHashChange();

  return () => {
    observer.disconnect();
    window.removeEventListener('hashchange', onHashChange);
    window.removeEventListener('popstate', onHashChange);
    for (const tocLinkElement of tocLinkElements) {
      tocLinkElement.removeEventListener('click', onTocClick);
    }
  };
}

let cleanup: (() => void) | undefined;
function setupToc() {
  cleanup?.();
  cleanup = initToc();
}

setupToc();
document.addEventListener('astro:page-load', setupToc);
document.addEventListener('astro:after-swap', setupToc);
</script>
